{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "types": ["jest", "node"],
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "typeRoots": ["./@types", "./types", "./node_modules/@types"],
    "paths": {
      "@/components/*": ["components/*"],
      "@/types/*": ["@types/*"],
      "@/shared/*": ["shared/*"],
      "@/styles/*": ["shared/styles/*"],
      "@/jsons/*": ["shared/jsons/*"],
      "@/intl/*": ["shared/jsons/intl/*"],
      "@/static/*": ["public/static/*"],
      "@/services/*": ["services/*"],
      "@/provider/*": ["services/provider/*"],
      "@/hooks/*": ["hooks/*"],
      "@/intl": ["shared/intl/index.ts"],
      "@/utils/*": ["utils/*"],
      "@/*": ["*"]
    }
  },
  "exclude": [
    "dist",
    ".next",
    "out",
    "node_modules",
    "next.config.js",
    "postcss.config.js",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "coverage"
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}