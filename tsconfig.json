{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "types": [
      "jest",
      "node"
    ],
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "typeRoots": [
      "./@types",
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@types/*": [
        "@types/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@styles/*": [
        "src/shared/styles/*"
      ],
      "@jsons/*": [
        "src/shared/jsons/*"
      ],
      "@intl/*": [
        "src/shared/jsons/intl/*"
      ],
      "@static/*": [
        "public/static/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@*": [
        "*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "dist",
    ".next",
    "out",
    "node_modules",
    "next.config.js",
    "postcss.config.js",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "coverage"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
