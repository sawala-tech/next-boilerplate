{
  "name": "sawala-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "test": "jest --env=jsdom --passWithNoTests",
    "start": "next start",
    "dev": "env NODE_ENV=development TAILWIND_MODE=watch next dev",
    "prepare": "husky install",
    "lint": "next lint",
    "lint:ts": "eslint --fix '**/*.{ts,tsx}'",
    "test:tsc": "tsc -p . --noEmit",
    "lint:staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "sh ./.husky/pre-commit",
      "pre-push": "sh ./.husky/pre-push",
      "commit-msg": "sh ./.husky/commit-msg"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@emotion/css": "^11.9.0",
    "@emotion/react": "^11.9.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.8.1",
    "@headlessui/react": "^1.5.0",
    "axios": "^0.26.1",
    "next": "^12.1.5",
    "nprogress": "^0.2.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "sharp": "^0.30.3"
  },
  "devDependencies": {
    "@babel/plugin-syntax-typescript": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@next/eslint-plugin-next": "^12.1.4",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.0.1",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.4.10",
    "@types/react": "^18.0.1",
    "@types/react-dom": "^18.0.0",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "4.29.1",
    "autoprefixer": "^10.2.3",
    "babel-jest": "^27.0.6",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-twin": "^1.0.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "postcss": "^8.4.5",
    "prettier": "^2.3.0",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.49.8",
    "tailwind-filter-utilities": "^2.0.0",
    "tailwindcss": "^3.0.23",
    "twin.macro": "^2.8.2",
    "typescript": "^4.6.3"
  },
  "browser": {
    "buffer": false
  }
}
