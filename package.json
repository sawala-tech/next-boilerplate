{
  "name": "sawala-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "test": "jest --env=jsdom --passWithNoTests",
    "start": "next start",
    "dev": "env NODE_ENV=development TAILWIND_MODE=watch next dev",
    "prepare": "husky install",
    "lint:ts": "eslint --fix '**/*.{ts,tsx}'",
    "test:tsc": "tsc -p . --noEmit",
    "lint:staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "sh ./.husky/pre-commit",
      "pre-push": "sh ./.husky/pre-push"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.4.0",
    "@tailwindcss/forms": "^0.3.3",
    "autoprefixer": "^10.2.3",
    "axios": "^0.21.1",
    "classnames": "^2.3.1",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^9.0.0",
    "next": "^11.0.1",
    "next-optimized-images": "^2.6.2",
    "node-sass": "5.0.0",
    "nprogress": "^0.2.0",
    "postcss": "^8.2.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "responsive-loader": "2.0.0",
    "sharp": "0.27.2",
    "twin.macro": "^2.6.2",
    "webp-loader": "^0.6.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.4.10",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.7",
    "@types/react-test-renderer": "^17.0.1",
    "@types/tailwindcss": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "4.29.1",
    "babel-jest": "^27.0.6",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.0",
    "react-test-renderer": "^17.0.2",
    "tailwind-filter-utilities": "^2.0.0",
    "tailwind-styled-components": "^2.0.3",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.2.4"
  },
  "browser": {
    "buffer": false
  }
}
